<!-- app/views/screenshots/success.html.erb -->

<!DOCTYPE html>
<html>
<head>
  <title>Success - Screenshot Capture</title>
  <style>
    /* Custom CSS to resize the image */
    .screenshot-container {
      max-width: 500px; /* Set the maximum width of the container */
      margin: 0 auto; /* Center the container horizontally */
    }

    .screenshot-container img {
      max-width: 100%; /* Set the maximum width of the image to fit the container */
      height: auto; /* Maintain the aspect ratio of the image */
      display: block; /* Make the image a block element for proper alignment */
      margin: 10px 0; /* Add some margin for spacing */
    }
  </style>
</head>
<body>
  <h1>Success - Screenshot Captured</h1>

  <% if flash[:message] %>
    <p><%= flash[:message] %></p>
  <% end %>

  <% if @screenshot %>
    <div class="screenshot-container">
      <h2>Preview of Captured Screenshot:</h2>
      <%= image_tag @screenshot.image %>
    </div>
  <% end %>
</body>
</html>
